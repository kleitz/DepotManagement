<?xml version="1.0" encoding="utf-8" ?>  
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true" internalLogLevel="Trace" internalLogFile="${basedir}/MyLogs/InnerLog.txt">  
    <extensions>  
        <add assembly="NLog.Extended" />
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>  
     
    <targets>
        <target name="logfile" xsi:type="File" fileName="${basedir}/MyLogs/${shortdate}_Outboundlog.txt"
                layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${callsite:className=false:fileName=false:includeSourcePath=false:methodName=true}|${message} ${exception:format=tostring}"/>  
    </targets>  
     
    <rules>  
        <logger name="*" minlevel="Trace" writeTo="logfile" />
        <logger name="*" minlevel="Error" writeTo="logfile" />  
    </rules>  
</nlog>  